{
    "name": "carlosafonso/emt-sdk-php",
    "type": "library",
    "description": "Unofficial PHP SDK for Madrid's EMT OpenData API",
    "keywords": [
        "carlosafonso",
        "emt-sdk-php"
    ],
    "homepage": "https://github.com/carlosafonso/emt-sdk-php",
    "license": "MIT",
    "authors": [
        {
            "name": "Carlos Afonso PÃ©rez",
            "email": "carlos.afonso.perez@gmail.com",
            "homepage": "https://github.com/carlosafonso",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0"
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "Afonso\\Emt\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Afonso\\Emt\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
